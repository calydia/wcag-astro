---
import fetchApi from '../../lib/strapi';
import Layout from '../../layouts/Layout.astro'
import HumanSitemapPrinciples from '../../components/HumanSitemapPrinciples.astro'
import type Sitemap from '../../interfaces/sitemap';

const sitemap = await fetchApi<Sitemap>({
  endpoint: 'wcag-sitemap',
  wrappedByKey: 'data',
  lang: 'en'
});
---

<Layout currentType="front" title={ sitemap.attributes.title } locale="en" metaDescription={ sitemap.attributes.metaDescription } engUrl="sitemap" fiUrl="sivukartta">
  <div class="max-w-[1564px] mx-auto md:px-8-px">
    <div class="text-lt-gray dark:text-dk-gray py-2 px-4-px max-w-xl mx-auto md:py-6 md:px-8-px lg:max-w-4xl">
      <h1 id="skip-target">{ sitemap.attributes.title }</h1>
      <div class="text-xl bodytext"><Fragment set:html={ sitemap.attributes.content } /></div>
      <HumanSitemapPrinciples />
    </div>
  </div>
</Layout>

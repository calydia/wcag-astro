---
import fetchApi from '../../lib/strapi';
import Layout from '../../layouts/Layout.astro'
import type Sitemap from '../../interfaces/sitemap';

const policy = await fetchApi<Sitemap>({
  endpoint: 'wcag-accessibility-policy',
  wrappedByKey: 'data',
  lang: 'en'
});
---

<Layout currentType="front" title={ policy.attributes.title } locale="en" metaDescription={ policy.attributes.metaDescription } engUrl="accessibility-policy" fiUrl="saavutettavuusseloste">
  <div class="max-w-[1564px] mx-auto md:px-8-px">
    <div class="text-lt-gray dark:text-dk-gray py-2 px-4-px max-w-xl mx-auto md:py-6 md:px-8-px lg:max-w-4xl">
      <h1 id="skip-target">{ policy.attributes.title }</h1>
      <div class="text-xl bodytext"><Fragment set:html={ policy.attributes.content } /></div>
    </div>
  </div>
</Layout>
